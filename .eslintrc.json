{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "prettier",
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "interface",
          "format": ["PascalCase"],
          "custom": {
            "regex": "^I[A-Z]",
            "match": true
          }
        }
      ],
      "require-jsdoc": "off",
      "new-cap": "off",
      "prettier/prettier": "error",
      "object-curly-spacing": "off",
      "indent": ["error", 2]
    }
}
