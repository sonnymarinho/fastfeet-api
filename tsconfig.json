{
  "compilerOptions": {
    "target": "es5",                               
    "module": "commonjs",                          
    "strict": true,                                
    "esModuleInterop": true,                          
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": "./src/",
    "paths": {
      "@errors/*":["errors/*"],
      "@useCases/*":["useCases/*"],
      "@repositories/*":["repositories/*"],
      "@entities/*":["entities/*"]
    },
    "experimentalDecorators": true
  }
}
